{% extends "layouts/base.twig" %}

{% block content %}
  {% for post in posts %}
    <h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
  {% endfor %}
  {% if pagination %}
    <ul class="pagination">
      {% if pagination.prev %}
        <li class="page-item">
          <a class="page-link {{pagination.prev.link|length ? '' : 'invisible'}}" href="{{pagination.prev.link}}">Prev</a>
        </li>
      {% endif %}
      {% for page in pagination.pages %}
        <li class="page-item">
          {% if page.link %}
            <a class="page-link" href="{{page.link}}">{{page.title}}</a>
          {% else %}
            <span class="page-link">{{page.title}}</span>
          {% endif %}
        </li>
      {% endfor %}
      {% if pagination.next %}
        <li class="page-item">
          <a class="page-link" {{pagination.next.link|length ? '' : 'invisible'}}" href="{{pagination.next.link}}">Next</a>
        </li>
      {% endif %}
    </ul>
  {% endif %}
{% endblock %}
