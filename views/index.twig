{% extends "layouts/base.twig" %}

{% block content %}
  {% for post in posts %}
    <article class="article">
      <div class="row">
        <div class="col-2">
          {% if post.get_thumbnail %}
            <img src="{{post.thumbnail.src('thumbnail')}}" />
          {% else %}
            <img src="{{ fn('get_template_directory_uri') }}/images/no_image-150x150.png" />
          {% endif %}
        </div>
        <div class="col">
          <h2><a href="{{post.link}}">{{post.title}}</a></h2>
          <p>{{post.get_preview(50, true, __('Read More', 'oxboot'), true)}}</p>
        </div>
      </div>
    </article>
  {% endfor %}
  {% include "partials/pagination.twig" %}
{% endblock %}
